<div class="mx-auto max-w-7xl py-10 px-4 text-center sm:px-6 lg:py-16 lg:px-8">
  <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
    <span class="block">KrishCross Fall Showdown</span>
  </h2>
  <div class="mt-8 flex justify-center">
    <div class="ml-3 inline-flex">
      <%= button_to "➖", volume_down_path, method: :post, class: "inline-flex items-center justify-center rounded-md border border-transparent bg-indigo-100 px-8 py-4 text-base font-medium text-indigo-700 hover:bg-indigo-200" %>
    </div>
    <div class="ml-3 inline-flex">
      <%= button_to "▶‖", play_pause_path, method: :post, class: "inline-flex items-center justify-center rounded-md border border-transparent bg-indigo-600 px-8 py-4 text-base font-medium text-white hover:bg-indigo-700" %>
    </div>
    <div class="ml-3 inline-flex">
      <%= button_to "➕", volume_up_path, method: :post, class: "inline-flex items-center justify-center rounded-md border border-transparent bg-indigo-100 px-8 py-4 text-base font-medium text-indigo-700 hover:bg-indigo-200" %>
    </div>
  </div>
</div>

<div class="relative">
  <div class="absolute inset-0 flex items-center" aria-hidden="true">
    <div class="w-full border-t border-gray-300"></div>
  </div>
  <div class="relative flex justify-center">
    <span class="bg-white px-3 text-lg font-medium text-gray-900">Interruptions</span>
  </div>
</div>

<div class="mt-4 flex justify-center">
  <div class="inline-flex rounded-md shadow">
    <span class="isolate inline-flex rounded-md shadow-sm">
      <%= button_to "Announcement", start_announcement_path, method: :post, class: "relative inline-flex items-center rounded-l-md border border-gray-300 bg-indigo-600 px-4 py-2 text-sm font-medium text-white hover:bg-gray-50 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-1 focus:ring-indigo-500" %>
      <%= button_to "Resume", stop_announcement_path, method: :post, class: "relative -ml-px inline-flex items-center rounded-r-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-1 focus:ring-indigo-500" %>
    </span>
  </div>
</div>

<div class="mt-4 flex justify-center">
  <div class="inline-flex rounded-md shadow">
    <span class="isolate inline-flex rounded-md shadow-sm">
      <%= button_to "5 Minute Countdown", start_5_minute_countdown_path, method: :post, class: "relative inline-flex items-center rounded-l-md border border-gray-300 bg-indigo-600 px-4 py-2 text-sm font-medium text-white hover:bg-gray-50 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-1 focus:ring-indigo-500" %>
      <%= button_to "Cancel", stop_5_minute_countdown_path, method: :post, class: "relative -ml-px inline-flex items-center rounded-r-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-1 focus:ring-indigo-500" %>
    </span>
  </div>
</div>

<div class="mt-4 flex justify-center">
  <div class="inline-flex rounded-md shadow">
    <span class="isolate inline-flex rounded-md shadow-sm">
      <%= button_to "10 Minute Countdown", start_10_minute_countdown_path, method: :post, class: "relative inline-flex items-center rounded-l-md border border-gray-300 bg-indigo-600 px-4 py-2 text-sm font-medium text-white hover:bg-gray-50 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-1 focus:ring-indigo-500" %>
      <%= button_to "Cancel", stop_10_minute_countdown_path, method: :post, class: "relative -ml-px inline-flex items-center rounded-r-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-1 focus:ring-indigo-500" %>
    </span>
  </div>
</div>

<div class="mt-4 flex justify-center">
  <div class="inline-flex rounded-md shadow">
    <span class="isolate inline-flex rounded-md shadow-sm">
      <%= button_to "Runway", start_runway_path, method: :post, class: "relative inline-flex items-center rounded-l-md border border-gray-300 bg-indigo-600 px-4 py-2 text-sm font-medium text-white hover:bg-gray-50 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-1 focus:ring-indigo-500" %>
      <%= button_to "Resume", stop_runway_path, method: :post, class: "relative -ml-px inline-flex items-center rounded-r-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-1 focus:ring-indigo-500" %>
    </span>
  </div>
</div>

<div class="mt-4 flex justify-center">
  <div class="inline-flex rounded-md shadow">
    <span class="isolate inline-flex rounded-md shadow-sm">
      <%= button_to "Awards", start_awards_path, method: :post, class: "relative inline-flex items-center rounded-l-md border border-gray-300 bg-indigo-600 px-4 py-2 text-sm font-medium text-white hover:bg-gray-50 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-1 focus:ring-indigo-500" %>
      <%= button_to "Resume", stop_awards_path, method: :post, class: "relative -ml-px inline-flex items-center rounded-r-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-1 focus:ring-indigo-500" %>
    </span>
  </div>
</div>

<% if @player&.playing? %>
  <div class="relative my-4">
    <div class="absolute inset-0 flex items-center" aria-hidden="true">
      <div class="w-full border-t border-gray-300"></div>
    </div>
    <div class="relative flex justify-center">
      <span class="bg-white px-3 text-lg font-medium text-gray-900">Now Playing</span>
    </div>
  </div>
  <div class="flex px-3 justify-between">
    <div class="mr-4 flex-shrink-0">
      <%= image_tag @player.currently_playing.album.images.last['url'] %> 
    </div>
    <div>
      <h4 class="text-lg font-bold"><%= @player.currently_playing.name %></h4>
      <p class="mt-1"><%= @player.currently_playing.artists.first.name %></p>
      <p class="mt-1"><%= @player.currently_playing.album.name %></p>
    </div>
    <%= button_to "Skip", skip_path, method: :post, class: "inline-flex items-center justify-right rounded-md border border-transparent bg-indigo-100 px-8 py-4 text-base font-medium text-indigo-700 hover:bg-indigo-200" %>
  </div>
<% end %>

<% if notice.present? %>
  <div class="fixed inset-x-0 bottom-24 pb-2 sm:pb-5">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="rounded-lg bg-indigo-600 p-2 shadow-lg sm:p-3">
        <div class="flex flex-wrap items-center justify-between">
          <div class="flex w-0 flex-1 items-center">
            <span class="flex rounded-lg bg-indigo-800 p-2">
              <!-- Heroicon name: outline/megaphone -->
              <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M10.34 5.84c-.688-.06-1.386-.09-2.09-.09H7.5a4.5 4.5 0 110-9h.75c.704 0 1.402-.03 2.09-.09m0 9.18c.253.962.584 1.892.985 2.783.247.55.06 1.21-.463 1.511l-.657.38c-.551.318-1.26.117-1.527-.461a20.845 20.845 0 01-1.44-4.282m3.102.069a18.03 18.03 0 01-.59-4.59c0-1.586.205-3.124.59-4.59m0 9.18a23.848 23.848 0 018.835 2.535M10.34 6.66a23.847 23.847 0 008.835-2.535m0 0A23.74 23.74 0 0018.795 3m.38 1.125a23.91 23.91 0 011.014 5.395m-1.014 8.855c-.118.38-.245.754-.38 1.125m.38-1.125a23.91 23.91 0 001.014-5.395m0-3.46c.495.413.811 1.035.811 1.73 0 .695-.316 1.317-.811 1.73m0-3.46a24.347 24.347 0 010 3.46" />
              </svg>
            </span>
            <p class="ml-3 truncate font-medium text-white">
              <span class="md:hidden"><%= flash[:notice] %></span>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>